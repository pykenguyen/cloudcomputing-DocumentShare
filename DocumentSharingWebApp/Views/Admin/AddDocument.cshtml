@model DocumentSharingWebApp.ViewModels.AdminAddDocumentVM
@using DocumentSharingWebApp.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Thêm tài liệu mới";

    var categories = ViewBag.Categories as IEnumerable<Category> ?? Enumerable.Empty<Category>();
    var catItems = categories.Select(c => new SelectListItem
            {
                Value = c.CategoryId.ToString(),
                Text = c.CategoryName,
                Selected = (Model?.CategoryId == c.CategoryId)
            });
}

<div class="content-header">
    <div class="container-fluid">
        <h2 class="mb-4">Tải tài liệu lên (Admin)</h2>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary card-outline">
            <div class="card-body">
                <form asp-action="AddDocument" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề tài liệu" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="DownloadCost" class="form-label"></label>
                            <input asp-for="DownloadCost" type="number" min="0" step="1" class="form-control" />
                            <div class="form-text">Đặt 0 nếu muốn miễn phí.</div>
                            <span asp-validation-for="DownloadCost" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Danh mục</label>
                            <select asp-for="CategoryId" asp-items="catItems" class="form-select" required>
                                <option value="">-- chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn về tài liệu"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="UploadFile" class="form-label"></label>
                            <input asp-for="UploadFile" type="file" class="form-control"
                                   accept=".pdf,.doc,.docx,.ppt,.pptx,.txt" />
                            <span asp-validation-for="UploadFile" class="text-danger"></span>
                            <div class="form-text">
                                Hỗ trợ duy nhất pdf tối đa 200MB.
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Tải lên
                        </button>
                        <a asp-action="ManageDocuments" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <!-- jQuery (nếu _AdminLayout chưa nạp) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- unobtrusive validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.20.0/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
}
