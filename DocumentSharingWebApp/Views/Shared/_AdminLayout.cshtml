@using Microsoft.AspNetCore.Http
@{
    Layout = null;
    var username = Context?.Session?.GetString("Username") ?? "Admin";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet" />
</head>
<body>
    <div class="app-wrapper">
        <!-- Sidebar -->
        <aside class="app-sidebar p-3">
            <div class="d-flex align-items-center gap-2 mb-3">
                <i class="bi bi-speedometer2"></i><span class="fw-semibold">Admin Panel</span>
            </div>
            <nav class="mb-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-light w-100 mb-2"><i class="bi bi-house"></i> Trang chủ</a>
                <ul class="nav flex-column gap-1">
                    <li class="nav-item"><a asp-controller="Admin" asp-action="Dashboard" class="nav-link"><i class="bi bi-speedometer"></i> Bảng điều khiển</a></li>
                    <li class="nav-item"><a asp-controller="Admin" asp-action="ManageUsers" class="nav-link"><i class="bi bi-people-fill"></i> Người dùng</a></li>
                    <li class="nav-item"><a asp-controller="Admin" asp-action="ManageDocuments" class="nav-link"><i class="bi bi-file-earmark-text"></i> Tài liệu</a></li>
                    <li class="nav-item"><a asp-controller="Admin" asp-action="ManageComments" class="nav-link"><i class="bi bi-chat-left-text-fill"></i> Bình luận</a></li>
                    <li class="nav-item"><a asp-controller="Admin" asp-action="ManageReports" class="nav-link"><i class="bi bi-flag-fill"></i> Báo lỗi</a></li>
                    <li class="nav-item"><a asp-controller="Admin" asp-action="ManageCategories" class="nav-link"><i class="bi bi-folder2"></i> Danh mục</a></li>
                </ul>
            </nav>
            <div class="mt-auto small">
                <div>Đăng nhập: <strong class="text-white">@username</strong></div>
                <form asp-controller="Account" asp-action="Logout" method="post" class="mt-2">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-sm w-100"><i class="bi bi-box-arrow-right"></i> Đăng xuất</button>
                </form>
            </div>
        </aside>

        <!-- Main -->
        <div class="app-main">
            <div class="app-topbar py-2">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <span class="text-muted">Bảng quản trị</span>
                    <button class="btn btn-outline-secondary btn-sm d-lg-none" type="button"
                            onclick="document.querySelector('.app-sidebar').classList.toggle('open')">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </div>

            <div class="app-content container-fluid">
                @RenderBody()
            </div>

            <footer class="app-footer">
                <strong>&copy; 2025 </strong>DocumentSharingWebApp — Admin
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
